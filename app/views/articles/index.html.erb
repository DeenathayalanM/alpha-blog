<div class="page-content">
  <h1 class="text-center mt-4"> Listing all articles
  </h1>
  <div class="container ">
    <% @article.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            By Deena
          </div>
          <div class="card-body">
            <h5 class="card-title text-success"><%= article.title %></h5>
            <p class="card-text"><%= truncate(article.desc,length: 200) %></p>
            <%= link_to 'view', article_path(article) , class: "btn btn-outline-success" %>
            <%= link_to 'edit', edit_article_path(article) , class: "btn btn-outline-info" %>
            <%= link_to 'delete', article_path(article) , class: "btn btn-outline-danger", data: {turbo_method: :delete , turbo_confirm: "Are you sure want to delete?"} %>
          </div>
          <div class="card-footer text-body-secondary">
            <small> Created <%= time_ago_in_words(article.created_at) %> ago ,Edited <%= time_ago_in_words(article.updated_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>