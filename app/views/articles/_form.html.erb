<div class="container form-background  w-50 mx-auto shadow-sm rounded">
  <%= form_with model: @article  do |f| %>
  <div class="form-group row pt-5">
    <%= f.label :title, class: "col-2 col-form-label fw-bold text-light" %>
    <div class="col-10">
      <%= f.text_field :title, class: "form-control" , placeholder: "Title of article"%><br /><br />
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-2 col-form-label fw-bold text-light"%>
    <div class="col-10">
      <%= f.text_area :desc , rows: 10, class: " form-control" , placeholder: "Description of article"%><br /><br />
    </div>
  </div>
  <div class="text-center pb-4">
    <%= f.submit button_text , class: "btn btn-primary btn-lg"%>
  </div>
  <% end %>
</div>